<resources>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingTop">@dimen/margin_padding_8dp</item>
        <item name="android:paddingBottom">@dimen/margin_padding_8dp</item>
        <item name="android:paddingLeft">@dimen/margin_padding_8dp</item>
        <item name="android:paddingRight">@dimen/margin_padding_8dp</item>
        <item name="android:textSize">@dimen/text_size_14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:width">@dimen/button_width_240dp</item>
        <item name="android:height">@dimen/button_height_45dp</item>
        <item name="android:minWidth">@dimen/button_width_240dp</item>
        <item name="android:minHeight">@dimen/button_height_45dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/text_size_14dp</item>
    </style>

    <style name="AppTheme.TextView.Medium" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/text_size_16dp</item>
    </style>

    <style name="AppTheme.TextView.Bold" parent="AppTheme.TextView">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
